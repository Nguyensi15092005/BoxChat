extends ../../layout/default.pug
include ../../mixins/alert.pug


block main 

  +alert-success(3000)
  +alert-error(3000)
  .container.mt-3 
    .row.d-flex.justify-content-center
      .col-5.d-flex.justify-content-center
        form(
          action="" 
          method="post" 
          class="frm-user"
        )
          h2 Đặt lại mật khẩu 
          div(class="form-gruop")
            label(for="password") Mật khẩu 
            input(
              type="password" 
              name="password" 
              id="password"
              class="form-control"
              placeholder="password enter"
            )

          div(class="form-gruop")
            label(for="comfirmpassword") Nhập lại mật khẩu 
            input(
              type="password" 
              name="comfirmpassword" 
              id="comfirmpassword"
              class="form-control"
              placeholder="comfirmpassword enter"
            )

          div(class="form-group")
            button(type="submit") Xác thực
          

      




