extends ../../layout/default.pug
include ../../mixins/alert.pug

block main 
  +alert-success(3000)
  +alert-error(3000)
  .container.mt-3 
    .row.d-flex.justify-content-center
      .col-5.d-flex.justify-content-center
        form(
          action="/user/register" 
          method="post" 
          class="frm-user frm-register"
          enctype="multipart/form-data"
        )
          h2 Register
          div(class="form-group mb-1")
            label(for="fullName") Fullname 
            input(
              type="text" 
              name="fullName" 
              id="fullName"
              class="form-control"
              placeholder="Fullname enter"
            )
          div(class="form-group mb-1")
            label(for="email") Email 
            input(
              type="text" 
              name="email" 
              id="name"
              class="form-control"
              placeholder="Email enter"
            ) 
          div(class="form-group mb-1")
            label(for="password") Password 
            input(
              type="password" 
              name="password" 
              id="name"
              class="form-control"
              placeholder="Password enter" 
            ) 

          div(class="form-group mb-1" upload-image)
            label(for="avatar") Avatar
            input(
              type="file" 
              name="avatar" 
              id="avatar"
              class="form-control-file"
              accept="image/*"
              upload-image-input
            )
            img(
              src=""
              class="image-preview"
              upload-image-preview
            )

          div(class="form-group")
            button(type="submit") Đăng ký
          

      




