mixin alert-success(time)
  - if (messages.success)
    .message.info
      div(
        class="message-success"
        show-alert
        date-time=time
      ) #{messages.success} <span close-alert><i class="fa-regular fa-circle-xmark"></i></span>


mixin alert-error(time)
  - if (messages.error)
    .message.info
      div(
        class="message-error"
        show-alert
        date-time=time
      ) #{messages.error} <span close-alert><i class="fa-regular fa-circle-xmark"></i></span>