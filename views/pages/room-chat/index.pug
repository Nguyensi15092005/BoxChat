extends ../../layout/default.pug
include ../../mixins/alert.pug

block main 
  +alert-success(3000)
  +alert-error(3000)

  .container 
    .row.d-flex.justify-content-center 
      .col-7 
        .box-socket
          .box-head
            a(
              href="/room-chat/create"
              class="btn-creae-room"
              ) Tạo phòng chát
          
          .box-body 
            .row
              each roomChat in roomsChat
                .col-6 
                  div(class="box-room")
                    div(class="inner-avt")
                      img(src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQ96zb4y5W-YZL9sETnpqzXTGC_Lbuet9uvulz18BrDUAo1HwAmpvue71WuO0Uxh_SnFKg&usqp=CAU", alt="")
                    div(class="inner-info")
                      div(class="inner-name") #{roomChat.title} 
                      div(class="inner-btn")
                        a(
                          href=`/chat/room-chat/${roomChat.id}`
                          class="message-room"
                        ) Nhắn tin
          
            